/* pages/pt/order-details/order-details.wxss */
.page {
	min-height: 100%;
	padding-bottom: 98rpx;
}
.order-detail-top{
    height: 120rpx;
    background-color: #252E3E;
    color: #ffffff;
    padding-left: 88rpx;
   
}
.order-status{
    font-size: 28rpx;
    margin-bottom:14rpx; 
}
.order-time{
    font-size: 26rpx;
}
.user-info-mobile{
    text-align: right;
}
.order-address{
    background-color: #ffffff;
    padding: 32rpx 24rpx;
    color: #353535;
}
.user-address-info{
    padding-top: 19rpx;
}
.order-no{
    margin-top: 20rpx;
    padding: 32rpx 24rpx;
    font-size:24rpx;
    color: #353535; 
    background-color: #ffffff;
}
.order-no-num-right{
    text-align: right;
    width: 74rpx;
    height: 44rpx;
    border: 1rpx solid #dddddd;
    border-radius: 5rpx;
    font-size: 7pt;
    color: #666666;
}
.order-add-time{
    margin-top: 10rpx;
}
.order-info-val{
    text-align: right;
}
.order-info{
    padding: 12rpx 24rpx 32rpx 24rpx;
    background-color: #ffffff;
    font-size: 12px;
    color: #353535; 
}
.order-info-item{
    padding-top: 20rpx;
}
.order-total-price{
    border-top: 1rpx solid #e2e2e2;
    background-color: #ffffff;
    line-height: 96rpx;
    text-align: right;
    height: 96rpx;
    padding: 0 24rpx;
    color: #353535;
    font-size: 12px;
}

.order-goods{
    background-color: #ffffff;
    padding: 0 24rpx 0rpx 24rpx;
    color: #353535;
}
.goods-image image{
    width: 156rpx;
    height: 156rpx;
    margin-right: 26rpx;
    margin-top: 30rpx;
}
.goods-name{
    font-size: 24rpx;
    margin-top: 32rpx;
    line-height: 1;
}
.attr-list{
    font-size: 20rpx;
    line-height: 1;
    margin-top:12rpx;
    margin-bottom:5rpx;
}
.order-price{
    font-size: 22rpx;
}
.order-footer{
    height: 98rpx;
    margin-top: -98rpx;
    border-top: 1rpx solid #e2e2e2;
    background-color: #ffffff;
    padding: 0 24rpx;
    text-align: right;
    justify-content:flex-end;
}
.play-btn{
    height: 45rpx;
    border:  1rpx solid #D6D6D6 !important;
    border-radius:20rpx; 
    line-height: 41rpx;
    text-align: center;
	font-size: 24rpx;
	color: #595959;
    padding:0 20rpx !important;
    margin: 0 0 0 24rpx !important;
    background-color:#fff;
    /* margin-left: 24rpx; */
}
.play-btn-yellow {
	height: 45rpx;
	color: #fff;
	background-color:#F49E3A;
	border-radius:20rpx; 
	line-height: 45rpx;
}
button::after {
    content:normal;
}
.express-info{
    padding: 20rpx 24rpx;
    background-color: #ffffff;
    font-size:11pt;
    color:#353535;
    margin-bottom: 20rpx;
}
.express-info-right image{
    width: 16rpx;
    height: 26rpx;
}
.express{
    margin-bottom: 20rpx;
}
.block {
    margin-top: 20rpx;
}
.block-row{
    padding-bottom: 20rpx;
}

.hide{
  display: none;
}
.modal{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}

.ml-2 {
    margin-left: 10rpx;
}
