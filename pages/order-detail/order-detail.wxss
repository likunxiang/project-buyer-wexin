    height: 98rpx;
    margin-top: -98rpx;
    border-top: 1rpx solid #e2e2e2;
    background-color: #ffffff;
    padding: 0 24rpx;
    text-align: right;
    justify-content:flex-end;
}

.copy-btn {
	width:41rpx;
	height:21rpx;
	line-height: 19rpx;
