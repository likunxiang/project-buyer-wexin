/* member/recommendMaterial/recommendMaterial.wxss */
@import "/components/share/share.wxss";

page {
	background: #F3F3F3;
}

.page {
	min-height: 100%;
	padding-bottom: 156rpx;
}

.act-main {
	background: #fff;
	padding: 24rpx;
}

.link-box {
	padding: 16rpx 20rpx;
	background: #F4F4F4;
}

.act-btn {
	width: 170rpx;
	height: 60rpx;
	line-height: 60rpx;
	background: #696969;
	border-radius: 30rpx;
}

.act-video {
	width: 480rpx;
	height: 300rpx;
	background: #39B54A;
}

.act-banner {
	width: 380rpx;
	height: 480rpx;
	background: #8DC63F;
}

.act-video-icon {
	position: absolute;
	left: 189rpx;
	top: 99rpx;
	z-index: 1;
	width: 102rpx;
	height: 102rpx;
	line-height: 98rpx;
	text-align: center;
	background: #000000;
	border: 2rpx solid #FFFFFF;
	opacity: 0.4;
	border-radius: 50%;
	font-size: 48rpx;
	color: #fff;
}

.footer {
	position: fixed;
	bottom: 0rpx;
	left: 0rpx;
	width: 100%;
	height: 165rpx;
	background: #fff;
	z-index: 10;
	padding: 38rpx 24rpx;
	border-top: 1rpx solid #F3F3F3;
}

.footer-btn {
	width: 339rpx;
	height: 88rpx;
	line-height: 88rpx;
	font-size: 30rpx;
	color: #FFFFFF;
	background: linear-gradient(-90deg, #FF9802, #FFC901);
	border-radius: 44rpx;
}

.footer-btn-link {
	background: #3DBB12;
}
