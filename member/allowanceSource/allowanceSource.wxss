/* member/allowanceSource/allowanceSource.wxss */
page {
	height: 100%;
	padding: 0 24rpx;
	background: #fff;
}
.img-box {
	width: 120rpx;
	height: 120rpx;
	border-radius: 50%;
	margin: auto;
}
.header {
	padding-top: 50rpx;
	padding-bottom: 100rpx;
	border-bottom: 1rpx solid rgba(190, 190, 190, 0.3);
}
.main {
	padding: 32rpx 24rpx;
}
.main-list {
	padding: 16rpx 0;
	justify-content: space-between;
}
.main-list-title {
	width: 160rpx;
	min-width: 0;
	-webkit-box-flex: 0;
	-webkit-flex-grow: 0;
	-ms-flex-positive: 0;
	flex-grow: 0;
	-webkit-flex-shrink: 0;
	-ms-flex-negative: 0;
	flex-shrink: 0;
}