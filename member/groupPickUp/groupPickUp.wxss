/* pages/groupPickUp/groupPickUp.wxss */
page {
	height: 100%;
	background-color: #F8F8F8;
}
.page {
	min-height: 100%;
}
.header {
	width: 100%;
	height: 330rpx;
	background-color: #ccc;
}
.now-address {
	
}
.footer {
	position: absolute;
	bottom: 50rpx;
	left: 40rpx;
	right: 40rpx;
	height: 150rpx;
	
	text-align: center;
}
.footer-btn {
	height: 78rpx;
	background: #489A19;
	color: #fff;
	line-height: 78rpx;
}
.pick-up {
	width: 100%;
	padding: 20rpx;
	background-color: #fff;
	border-radius: 8rpx;
}
.pick-up-img {
	width: 110rpx;
	height: 110rpx;
	border-radius: 50%;
	overflow: hidden;
	flex-shrink: 0;
}
.choose-btn {
	width: 110rpx;
	height: 50rpx;
	line-height: 50rpx;
	text-align: center;
	background-color: #489A19;
	border-radius: 8rpx;
}