.page {
	min-height: 100%;
	padding-bottom: 144rpx;
}
.data-row {
    width: 702rpx;
    border-radius: 20rpx;
    padding: 24rpx 24rpx 32rpx;
}
button::after {
	border: none;
	overflow: auto;
}
.pic-list {
    margin-left: -20rpx;
    margin-top: -20rpx;
}

.pic-list image {
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.status-bar {
    position: relative;
    height: 77rpx;
    line-height: 77rpx;
    color: #fff;
    text-align: center;
    font-size: 24rpx;
    margin-bottom: 20rpx;
    background-color: #252E3E;
}

.status-bar image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: #fb715a;
}

.express-block{
    background: #fff;
    width: 702rpx;
    margin: auto;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    padding: 0 24rpx;
}
.copy-fz {
    border-radius:50%;
    margin-right:24rpx;
    color:#999999;
    width:100rpx;
    height:100rpx;
    border:1rpx solid #e2e2e2;
    font-size:10pt;
}
.address-info {
    justify-content:space-between;
    margin:20rpx 40rpx 20rpx 0;
    color:#353535;
}

.goods_send {
    border: none;
    background:linear-gradient(-90deg,rgba(255,152,2,1),rgba(255,201,1,1));
border-radius:44rpx;
    color: #fff;
    height: 88rpx;
    font-size: 36rpx;
    line-height: 88rpx;
}
.footer {
	position: absolute;
	bottom: 0rpx;
	left: 0rpx;
	width: 100%;
	height: 144rpx;
    padding: 0 24rpx;
    z-index: 1;
}
.btn {
	width:180rpx;
	height:72rpx;
	line-height: 70rpx;
	text-align: center;
	font-size: 26rpx;
	color: ##333333;
	border:1rpx solid rgba(97,97,97,.4);
	border-radius:36rpx;
	margin-left: 16rpx;
}
.btn-red {
	border:1px solid rgba(255,64,26,1);
	color: #FF401A;
}
.btn-red-full {
	background:rgba(255,64,26,1);
	color: #fff;
	border: none;
}