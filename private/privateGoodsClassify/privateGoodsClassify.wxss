/* pages//private/privateGoodsClassify/privateGoodsClassify.wxss */
page {
	height: 100%;
	background-color: #F7F7F7;
}
.page {
	min-height: 100%;
	padding-bottom: 128rpx;
	padding-top: 20rpx;
} 
.footer {
	position: absolute;
	bottom: 45rpx;
	left: 40rpx;
	right: 40rpx;
}
.footer-btn {
	width: 100%;
	height: 78rpx;
	line-height: 78rpx;
	text-align: center;
	background-color: #F49E3A;
	color: #fff;
	font-size: 30rpx;
}
.classify {
	height: 100rpx;
}
.goods-classify-model {
	position: absolute;
	bottom: 0rpx;
	left: 0rpx;
	right: 0rpx;
	top: 0rpx;
	z-index: 9;
	background-color: rgba(0,0,0,.35);
}
.goods-classify-content {
	position: absolute;
	bottom: 0rpx;
	left: 0rpx;
	right: 0rpx;
	height: 586rpx;
	border-radius: 8rpx 8rpx 0 0;
	padding: 32rpx 20rpx 42rpx;
	background-color: #fff;
}
.btn-box {
	width: 325rpx;
	height: 78rpx;
	background: #F49E3A;
	line-height: 78rpx;
	color: #fff;
	text-align: center;
	border: 2rpx solid #F49E3A;
}
.btn-box-white {
	background: #fff;
	border: 2rpx solid #FF9100;
	color: #FF9100;
}
.classify-box {
	padding: 8rpx 20rpx;
	border: 2rpx solid #9B9B9B;
	height: 56rpx;
	border-radius: 8rpx;
	margin-right: 20rpx;
	margin-bottom: 20rpx;
}